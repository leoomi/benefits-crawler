    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/api-server/api-server.go",
            "args": ["-c", "${workspaceFolder}"]
        },
        {
            "name": "Launch Crawler server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/crawler-server/crawler-server.go",
            "args": ["-rod=show,devtools", "-c", "${workspaceFolder}"]
        }
    ]
}